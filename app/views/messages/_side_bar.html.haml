.Side-bar
  .Side-bar__user-name 
    .Side-bar__top-items
      %h3.Side-bar__top-items__name 
        = current_user.name
      %ul.Side-bar__top-items__icons
        %li.Side-bar__btn
          = link_to new_group_path do
            = icon('fa', 'edit', class: 'icon')
        %li.Side-bar__btn
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class: ' icon')
  .Side-bar__group-list 
    - current_user.groups.each do |group|
      .Side-bar__group
        = link_to group_messages_path(group), class: "group__name" do
          %p.Side-bar__group__name 
            = group.name
          %p.Side-bar__group__info
            = group.show_last_message